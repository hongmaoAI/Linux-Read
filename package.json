{
  "name": "linux-tutorial",
  "version": "0.0.1",
  "description": "使用 vuepress 生成的 markdown 文档站点",
  "author": "mrcode <99299684@qq.com>",
  "private": false,
  "scripts": {
    "docs:dev": "vuepress dev docs --open",
    "docs:devx": "node --max_old_space_size=4096 ./node_modules/vuepress/cli.js dev docs --open",
    "docs:build": "vuepress build docs",
    "docs:buildx": "node --max_old_space_size=4096 ./node_modules/vuepress/cli.js build docs",
    "docs:dev-fast": "vuepress dev docs --clean-cache --clean-temp",
    "dev": "vuepress dev docs --clean-cache --clean-temp"
  },
  "dependencies": {
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "vuepress": "^2.0.0-rc.24",
    "@vuepress/theme-default": "^2.0.0-rc.24",
    "@vuepress/plugin-back-to-top": "^2.0.0-rc.24",
    "@vuepress/plugin-medium-zoom": "^2.0.0-rc.24",
    "@vuepress/plugin-search": "^2.0.0-rc.24",
    "@vuepress/bundler-vite": "^2.0.0-rc.24"
  }
}